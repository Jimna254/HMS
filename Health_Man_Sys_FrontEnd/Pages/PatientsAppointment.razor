@page "/appointment"
@using Health_Man_Sys_FrontEnd.Models.User;

<div class="container" style="margin:3px">
    <div class="d-flex justify-content-center mb-2" >
        <h3>Book an Appointment with our doctors</h3>
    </div>
    
       
    
    <div class="main-container" >
        <form class="form-container">
            <div class="form-group" >
                <label for="hospital-select">Select Hospital:</label>
                <select class="form-control" id="hospitalselect" >
                    <option value="hospital-1">Hospital 1</option>
                    <option value="hospital-2">Hospital 2</option>
                    <option value="hospital-3">Hospital 3</option>
                </select>
            </div>
            <div class="form-group" >
                <label for="hospital-select">Select Department:</label>
                <select class="form-control" id="hospitalselect" >
                    <option value="hospital-1">OPHALMALOGY</option>
                    <option value="hospital-2">DENTAL</option>
                    
                </select>
            </div>

            <div class="form-group" >
                <label for="date-input">Date:</label>
                <input type="date" class="form-control" id="date-input" >
            </div>

            <div class="form-group" >
                <label for="hospital-select">Select Time:</label>
                <select class="form-control" id="timeselect" >
                    <option value="Time-1">8:00am-10:00am</option>
                    <option value="Time-2">8:00am-10:00am</option>
                    <option value="Time-3">8:00am-10:00am</option>
                </select>
            </div>

            <div class="form-group" >
                <label for="doctor-select">Available Doctors:</label>
                <select class="form-control" id="doctor-select">
                    <option value="doctor1">Doctor 1</option>
                    <option value="doctor2">Doctor 2</option>
                    <option value="doctor3">Doctor 3</option>

                </select>
            </div>

            <div class="form-group">
                <label for="symptoms-input">Symptoms:</label>
				<textarea class="form-control" id="symptoms-input"></textarea>
				<div class="d-flex justify-content-md-start mt-3">
            </div>
                <button type="submit" class="btn btn-primary" style="background-color:#395D6B;">Submit</button>

            </div>
        </form>
    </div>
</div>

